<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kanban" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/statusNavFrag</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:editTextColor">@color/textSubtitles</item>
        <item name="android:textColorHint">@color/colorTextHint</item>

        <item name="android:windowLightStatusBar">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>

        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->

    </style>


    <style name="splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="background">@color/white</item>


    </style>

    <style name="Theme.Kanban.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Kanban.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kanban.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
